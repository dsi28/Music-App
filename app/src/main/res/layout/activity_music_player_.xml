<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicPlayerActivity"
    android:background="@color/black">
    <ImageView
        android:contentDescription="@string/playerSongImgContentDesc"
        android:id="@+id/playerPic"
        android:layout_width="@dimen/zeroDP"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/smallDP"
        android:layout_marginEnd="@dimen/large1DP"
        android:layout_marginLeft="@dimen/large1DP"
        android:layout_marginRight="@dimen/large1DP"
        android:layout_marginStart="@dimen/large1DP"
        android:layout_marginTop="@dimen/smallDP"
        android:adjustViewBounds="true"
        android:background="@color/colorAccent"
        android:cropToPadding="true"
        android:padding="@dimen/smallDP"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42000002"
        app:srcCompat="@drawable/vinyl" />
    <ImageView
        android:contentDescription="@string/playerBackDesc"
        android:id="@+id/playerBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/smallDP"
        android:layout_marginLeft="@dimen/medium2DP"
        android:layout_marginStart="@dimen/medium2DP"
        android:layout_marginTop="@dimen/smallDP"
        app:layout_constraintBottom_toBottomOf="@+id/playerSongBar"
        app:layout_constraintStart_toStartOf="@+id/playerPic"
        app:layout_constraintTop_toBottomOf="@+id/playerPic"
        app:layout_constraintVertical_bias="0.65999997"
        app:srcCompat="@android:drawable/ic_media_previous"/>
    <ImageView
        android:contentDescription="@string/playerForDesc"
        android:id="@+id/playerForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/smallDP"
        android:layout_marginEnd="@dimen/medium2DP"
        android:layout_marginRight="@dimen/medium2DP"
        android:layout_marginTop="@dimen/smallDP"
        app:layout_constraintBottom_toBottomOf="@+id/playerSongBar"
        app:layout_constraintEnd_toEndOf="@+id/playerPic"
        app:layout_constraintTop_toBottomOf="@+id/playerPic"
        app:layout_constraintVertical_bias="0.65999997"
        app:srcCompat="@android:drawable/ic_media_next"/>
    <TextView
        android:id="@+id/playerSongNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium3DP"
        android:layout_marginEnd="@dimen/medium3DP"
        android:layout_marginLeft="@dimen/medium3DP"
        android:layout_marginRight="@dimen/medium3DP"
        android:layout_marginStart="@dimen/medium3DP"
        android:layout_marginTop="@dimen/smallDP"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/medium2SP"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/playerPic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.266"
        tools:text="I Don't Wanna Wait" />
    <TextView
        android:id="@+id/playerArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/smallDP"
        android:layout_marginEnd="@dimen/smallDP"
        android:layout_marginLeft="@dimen/smallDP"
        android:layout_marginRight="@dimen/smallDP"
        android:layout_marginStart="@dimen/smallDP"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/medSP"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/playerPic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerSongNameTV"
        app:layout_constraintVertical_bias="0.100000024"
        tools:text="SOJA"/>
    <SeekBar
        android:id="@+id/playerSongBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="@dimen/zeroDP"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium3DP"
        android:layout_marginEnd="@dimen/medium4DP"
        android:layout_marginLeft="@dimen/medium4DP"
        android:layout_marginRight="@dimen/medium4DP"
        android:layout_marginStart="@dimen/medium4DP"
        android:layout_marginTop="@dimen/smallDP"
        android:max="1"
        android:progress="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerPic"
        app:layout_constraintVertical_bias="0.816" />
    <ImageView
        android:contentDescription="@string/playerInfoDesc"
        android:id="@+id/playerSongInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/extraSmallDP"
        android:layout_marginEnd="@dimen/medium2DP"
        android:layout_marginLeft="@dimen/smallDP"
        android:layout_marginRight="@dimen/medium2DP"
        android:layout_marginStart="@dimen/smallDP"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/playerSongNameTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/playerSongNameTV"
        app:layout_constraintTop_toTopOf="@+id/playerSongNameTV"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/ic_menu_info_details" />
    <ImageView
        android:contentDescription="@string/playerLikeDesc"
        android:id="@+id/playerLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/smallDP"
        android:layout_marginEnd="@dimen/smallDP"
        android:layout_marginLeft="@dimen/medium2DP"
        android:layout_marginRight="@dimen/smallDP"
        android:layout_marginStart="@dimen/medium2DP"
        android:layout_marginTop="@dimen/listDP"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/playerForward"
        app:layout_constraintEnd_toStartOf="@+id/playerForward"
        app:layout_constraintStart_toEndOf="@+id/playerPauseSong"
        app:layout_constraintTop_toBottomOf="@+id/playerPic"
        app:srcCompat="@android:drawable/ic_input_add" />
    <ImageView
        android:contentDescription="@string/playerNoLikeDesc"
        android:id="@+id/playerNoLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/smallDP"
        android:layout_marginEnd="@dimen/medium2DP"
        android:layout_marginLeft="@dimen/smallDP"
        android:layout_marginRight="@dimen/medium2DP"
        android:layout_marginStart="@dimen/smallDP"
        android:layout_marginTop="@dimen/listDP"
        app:layout_constraintBottom_toTopOf="@+id/playerBack"
        app:layout_constraintEnd_toStartOf="@+id/playerPauseSong"
        app:layout_constraintStart_toEndOf="@+id/playerBack"
        app:layout_constraintTop_toBottomOf="@+id/playerPic"
        app:srcCompat="@android:drawable/ic_delete" />
    <TextView
        android:id="@+id/playerMusicListType"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/zeroDP"
        android:layout_marginBottom="@dimen/listDP"
        android:layout_marginEnd="@dimen/smallDP"
        android:layout_marginLeft="@dimen/smallDP"
        android:layout_marginRight="@dimen/smallDP"
        android:layout_marginStart="@dimen/smallDP"
        android:layout_marginTop="@dimen/smallDP"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/playerPic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerArtist"
        app:layout_constraintVertical_bias="0.882"
        tools:text="Reggae"/>
    <ImageView
        android:contentDescription="@string/playerSongPlay"
        android:id="@+id/playerPlayPic"
        android:layout_width="@dimen/zeroDP"
        android:layout_height="@dimen/zeroDP"
        android:layout_marginBottom="@dimen/smallDP"
        android:layout_marginEnd="@dimen/smallDP"
        android:layout_marginLeft="@dimen/smallDP"
        android:layout_marginRight="@dimen/smallDP"
        android:layout_marginStart="@dimen/smallDP"
        android:layout_marginTop="@dimen/smallDP"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/playerPic"
        app:layout_constraintEnd_toEndOf="@+id/playerPic"
        app:layout_constraintStart_toStartOf="@+id/playerPic"
        app:layout_constraintTop_toTopOf="@+id/playerPic"
        app:srcCompat="@android:drawable/ic_media_play" />
    <ImageView
        android:contentDescription="@string/playerSongPause"
        android:id="@+id/playerPausePic"
        android:layout_width="@dimen/zeroDP"
        android:layout_height="@dimen/zeroDP"
        android:layout_marginBottom="@dimen/smallDP"
        android:layout_marginEnd="@dimen/smallDP"
        android:layout_marginLeft="@dimen/smallDP"
        android:layout_marginRight="@dimen/smallDP"
        android:layout_marginStart="@dimen/smallDP"
        android:layout_marginTop="@dimen/smallDP"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/playerPic"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/playerPic"
        app:layout_constraintStart_toStartOf="@+id/playerPic"
        app:layout_constraintTop_toTopOf="@+id/playerPic"
        app:srcCompat="@android:drawable/ic_media_pause" />
    <ImageView
        android:contentDescription="@string/playerSongPlayControl"
        android:id="@+id/playerPlaySong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/smallDP"
        android:layout_marginEnd="@dimen/smallDP"
        android:layout_marginLeft="@dimen/smallDP"
        android:layout_marginRight="@dimen/smallDP"
        android:layout_marginStart="@dimen/smallDP"
        android:layout_marginTop="@dimen/smallDP"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/playerSongBar"
        app:layout_constraintEnd_toStartOf="@+id/playerForward"
        app:layout_constraintStart_toEndOf="@+id/playerBack"
        app:layout_constraintTop_toBottomOf="@+id/playerPic"
        app:layout_constraintVertical_bias="0.66999996"
        app:srcCompat="@android:drawable/ic_media_play" />
    <ImageView
        android:contentDescription="@string/playerSongPauseControl"
        android:id="@+id/playerPauseSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/smallDP"
        android:layout_marginEnd="@dimen/smallDP"
        android:layout_marginLeft="@dimen/smallDP"
        android:layout_marginRight="@dimen/smallDP"
        android:layout_marginStart="@dimen/smallDP"
        android:layout_marginTop="@dimen/smallDP"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/playerSongBar"
        app:layout_constraintEnd_toStartOf="@+id/playerForward"
        app:layout_constraintStart_toEndOf="@+id/playerBack"
        app:layout_constraintTop_toBottomOf="@+id/playerPic"
        app:layout_constraintVertical_bias="0.65999997"
        app:srcCompat="@android:drawable/ic_media_pause" />
</android.support.constraint.ConstraintLayout>