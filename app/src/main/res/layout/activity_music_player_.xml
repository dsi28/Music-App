<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicPlayer_Activity"
    android:background="@color/black">

    <ImageView
        android:id="@+id/playerPic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:background="@color/colorAccent"
        android:cropToPadding="true"
        android:padding="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42000002"
        app:srcCompat="@drawable/vinyl" />

    <ImageView
        android:id="@+id/playerBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/playerSongBar"
        app:layout_constraintStart_toStartOf="@+id/playerPic"
        app:layout_constraintTop_toBottomOf="@+id/playerPic"
        app:layout_constraintVertical_bias="0.65999997"
        app:srcCompat="@android:drawable/ic_media_previous"
        />

    <ImageView
        android:id="@+id/playerForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/playerSongBar"
        app:layout_constraintEnd_toEndOf="@+id/playerPic"
        app:layout_constraintTop_toBottomOf="@+id/playerPic"
        app:layout_constraintVertical_bias="0.65999997"
        app:srcCompat="@android:drawable/ic_media_next" />

    <TextView
        android:id="@+id/playerSongNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/colorAccent"

        android:textSize="27sp"
        android:textStyle="bold"

        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/playerPic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.266"
        tools:text="I Don't Wanna Wait" />

    <TextView
        android:id="@+id/playerArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/colorAccent"

        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/playerPic"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerSongNameTV"
        app:layout_constraintVertical_bias="0.100000024"
        tools:text="SOJA" />

    <SeekBar
        android:id="@+id/playerSongBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:max="1"
        android:progress="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerPic"
        app:layout_constraintVertical_bias="0.816" />

    <ImageView
        android:id="@+id/playerSongInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/playerSongNameTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/playerSongNameTV"
        app:layout_constraintTop_toTopOf="@+id/playerSongNameTV"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

    <ImageView
        android:id="@+id/playerLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/playerForward"
        app:layout_constraintEnd_toStartOf="@+id/playerForward"
        app:layout_constraintStart_toEndOf="@+id/playerPauseSong"
        app:layout_constraintTop_toBottomOf="@+id/playerPic"
        app:srcCompat="@android:drawable/ic_input_add" />

    <ImageView
        android:id="@+id/playerNoLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/playerBack"
        app:layout_constraintEnd_toStartOf="@+id/playerPauseSong"
        app:layout_constraintStart_toEndOf="@+id/playerBack"
        app:layout_constraintTop_toBottomOf="@+id/playerPic"
        app:srcCompat="@android:drawable/ic_delete" />

    <TextView
        android:id="@+id/playerMusicListType"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/playerPic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerArtist"
        app:layout_constraintVertical_bias="0.882"
        tools:text="Reggae" />

    <ImageView
        android:id="@+id/playerPlayPic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/playerPic"
        app:layout_constraintEnd_toEndOf="@+id/playerPic"
        app:layout_constraintStart_toStartOf="@+id/playerPic"
        app:layout_constraintTop_toTopOf="@+id/playerPic"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageView
        android:id="@+id/playerPausePic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/playerPic"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/playerPic"
        app:layout_constraintStart_toStartOf="@+id/playerPic"
        app:layout_constraintTop_toTopOf="@+id/playerPic"
        app:srcCompat="@android:drawable/ic_media_pause" />

    <ImageView
        android:id="@+id/playerPlaySong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/playerSongBar"
        app:layout_constraintEnd_toStartOf="@+id/playerForward"
        app:layout_constraintStart_toEndOf="@+id/playerBack"
        app:layout_constraintTop_toBottomOf="@+id/playerPic"
        app:layout_constraintVertical_bias="0.66999996"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageView
        android:id="@+id/playerPauseSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/playerSongBar"
        app:layout_constraintEnd_toStartOf="@+id/playerForward"
        app:layout_constraintStart_toEndOf="@+id/playerBack"
        app:layout_constraintTop_toBottomOf="@+id/playerPic"
        app:layout_constraintVertical_bias="0.65999997"
        app:srcCompat="@android:drawable/ic_media_pause" />

</android.support.constraint.ConstraintLayout>